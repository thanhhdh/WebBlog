@model List<WebBlog.ViewModels.TagVM>
@{
    ViewData["Title"] = "Index";
}
<div class="container-fluid">
    <a class="btn btn-primary mb-1" asp-action="Create" asp-controller="Tag" >Add Tag</a>

    <div class="card">
        <div class="card-header bg-primary">
            <h4 class="card-title text-white">
                List Tags
            </h4>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover" id="userTable">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Slug</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tag in Model)
                    {
                        <tr>
                            <td>@tag.Title</td>
                            <td>@tag.Slug</td>
                            <td >
                                <div class="align-items-center d-flex">

                                <a class="btn btn-warning" asp-action="Edit" asp-controller="Tag" asp-route-id="@tag.Id">Edit</a>
                                <form method="post" asp-action="delete" asp-controller="Tag" asp-route-id="@tag.Id" asp-area="Admin">
                                    <button type="submit" class="btn btn-danger" >Delete</button>
                                </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>